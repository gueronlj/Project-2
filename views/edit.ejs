<!DOCTYPE html>
<html lang="en" dir="ltr">
   <%- include ('./partials/head.ejs') %>
   <body>
      <header>
         <%- include ('./partials/header.ejs') %>
      </header>
      <%- include ('./partials/landing.ejs') %>
      <div class="main">
         <%- include ('./partials/side-menu.ejs') %>
         <div class="content">
            <form class="request" action="/lfs/request/<%=request._id%>?_method=PUT" method="post">
               <label for="name">Name</label>
               <input type="text" name="name" value="<%=request.name%>">
               <label for="date">Date</label>
               <input type="datetime-local" name="date" value="<%=request.date%>">
               <label for="guests">Number of guests</label>
               <input type="number" name="guests" value="<%=request.guests%>">
               <label for="allergies">Allergies</label>
               <input type="text" name="allergies" value="<%=request.allergies%>">
               <label for="notes">Notes</label>
               <textarea name="note" rows="8" cols="35">Any special requests or comments.</textarea>
               <br>
               <input type="submit" name="" value="Submit">
            </form>
            <form  action="/lfs/request/<%=request._id%>?_method=DELETE" method="post">
               <input type="submit" name="" value="Cancel Reservation">
            </form>
         </div>
      </div>
   </body>
</html>
